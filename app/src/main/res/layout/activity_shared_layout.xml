<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/app_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/teal_neon"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/dark_grey"
                android:fontFamily="@font/comfortaa_bold"
                android:minWidth="350dp"
                android:shadowColor="@color/teal_neon"
                android:shadowRadius="30"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="@color/teal_neon"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.collabolab.HomeFragment"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/app_color"
            android:paddingTop="5dp"

            android:layout_gravity="bottom"
            android:gravity="bottom"

            >

            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/nav_menu_color"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar_svg"
                app:tint="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"/>
            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/app_color"
                android:paddingTop="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_svg"
                app:tint="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"/>
            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/nav_menu_color"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_person"
                app:tint="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"/>
            <ImageButton
                android:id="@+id/projectBtn"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/nav_menu_color"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/project_svg"
                app:tint="@color/white"
                />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>