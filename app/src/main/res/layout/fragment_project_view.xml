<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectViewFragment"
    android:background="@color/app_color"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/inviteCollaboratorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/status_blue_spinner"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:minWidth="250dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/dark_grey"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:src="@drawable/plus_sign"
                    app:tint="@color/white"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Invite Collaborator"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/chatBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chat_message_bubble"
            app:tint="@color/white"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner:"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingHorizontal="15dp"
        />
    <View
        android:layout_width="175dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginVertical="2dp"/>
    <TextView
        android:id="@+id/ownerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner"
        android:textSize="30sp"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/light_blue"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_grey"
        android:paddingHorizontal="15dp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="15dp"
        />
    <View
        android:layout_width="175dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginVertical="2dp"/>
    <TextView
        android:id="@+id/projectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Description"
        android:textSize="20sp"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_grey"
        android:paddingHorizontal="15dp"
        android:paddingBottom="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collabuddies:"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="15dp"
        />
    <View
        android:layout_width="175dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginVertical="2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/membersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/viewTasksBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Tasks"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/light_blue"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/comfortaa_bold"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:paddingTop="2dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
</LinearLayout>