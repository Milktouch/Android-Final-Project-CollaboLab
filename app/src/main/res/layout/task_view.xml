<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/light_grey"
    android:paddingBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_grey"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/taskStatusColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="16dp"
                android:layout_weight="0"
                android:src="@drawable/circle_svg"
                app:tint="@color/light_orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/taskNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Task Name"
                        android:textColor="@color/light_grey"
                        android:textSize="25sp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/deleteTaskBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:src="@drawable/x"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"/>
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="due:  "
                        android:textColor="@color/light_grey"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dueDateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="1/5/2024"
                        android:textColor="@color/light_grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="assigned to:  "
                        android:textColor="@color/light_grey"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/assigneeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text=" Member name"
                        android:textColor="@color/light_grey"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/actionBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Action 1"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/status_blue_spinner"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:paddingBottom="3dp"
                android:maxWidth="60dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/actionBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Action 1"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/status_blue_spinner"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:paddingBottom="3dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>