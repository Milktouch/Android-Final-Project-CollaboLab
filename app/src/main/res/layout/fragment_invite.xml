<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteFragment"
    android:background="@color/app_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/status_blue_spinner"
        android:paddingBottom="3dp"
        android:minWidth="250dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/dark_grey"
            android:paddingHorizontal="20dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Collaborator"
                android:fontFamily="@font/comfortaa_bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/qrCodeIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:src="@drawable/qrcode"
        android:layout_gravity="right"
        android:layout_margin="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Collabuddy"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginVertical="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:src="@drawable/magnifyingglass"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/dark_grey"
            android:fontFamily="@font/comfortaa_bold"
            android:inputType="textAutoComplete"
            android:paddingHorizontal="15dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:hint="Username | Email | ID"
            android:textColorHint="@color/light_grey"
            android:imeOptions="actionDone"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/searchResultLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/userInviteCardLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/userEmailTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/userIdTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="45und30986djhboi8"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="5dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/addCollabuddyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/light_blue">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:src="@drawable/plus_sign"
                android:layout_gravity="center"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/inviteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Collabuddy"
                android:fontFamily="@font/comfortaa_bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>